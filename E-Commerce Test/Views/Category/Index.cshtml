@model IEnumerable<E_Commerce_Test.Models.Dtos.CategoriesDtos.GetCategoryDto>

@{
    ViewBag.pageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>@ViewBag.CardTitle</h2>
        <a href="@Url.Action("Create", "Category")" class="btn btn-success">Create New Category</a>
    </div>
    <div class="card-body">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductCount)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductCount)</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .card-header h2 {
            margin: 0;
        }
    </style>
}
