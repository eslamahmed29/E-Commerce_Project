@model E_Commerce_Test.ViewModels.CreateUserViewModel

@{
    ViewBag.pageTitle = "User Management";
    ViewBag.CardTitle = "Create User";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form asp-action="CreateUser" method="post" class="border p-4 shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Full_Name" class="form-control" />
                    <label asp-for="Full_Name">Full Name</label>
                    <span asp-validation-for="Full_Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="City" class="form-control" />
                    <label asp-for="City">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Address" class="form-control" />
                    <label asp-for="Address">Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Users" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
