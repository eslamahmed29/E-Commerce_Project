@model IEnumerable<E_Commerce_Test.Models.Models.OrderHeader>

@{
    ViewData["Title"] = "All Orders";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="table-responsive">
        <table id="ordersTable" class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>User</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.OrderTotal.ToString("C")</td>
                        <td>@order.AppUser.UserName</td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ordersTable').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
}
